<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matt2929.strokeappdec2017.Activity.WorkoutOrHistoryOrCalendarActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mrehab" />

        <TextView
            android:id="@+id/userNameSplashWelcome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="What would you like to do?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/workHist_Work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".5"
            android:background="@drawable/button_shape_grey"
            android:text="Start"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="-265dp"
            tools:layout_editor_absoluteY="259dp" />

        <Button
            android:id="@+id/workHist_Hist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".5"
            android:background="@drawable/button_shape_grey"
            android:text="View History"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:visibility="gone"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="346dp" />

        <Button
            android:id="@+id/workHist_Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".5"
            android:background="@drawable/button_shape_grey"
            android:text="Set Next Workout"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="36sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
