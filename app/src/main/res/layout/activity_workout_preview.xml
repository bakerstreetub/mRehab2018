<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.matt2929.strokeappdec2017.Activity.WorkoutPreviewActivity">

    <Button
        android:id="@+id/preview_start"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="45dp"
        android:layout_weight="2"
        android:background="@drawable/button_shape_dkblue"
        android:text="Start Activity"
        android:textColor="@color/colorBackground"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="342dp"
        tools:layout_editor_absoluteY="604dp" />

    <com.example.matt2929.strokeappdec2017.WorkoutsView.PlayGifView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="125dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_grey"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/home" />


    </LinearLayout>

</LinearLayout>
